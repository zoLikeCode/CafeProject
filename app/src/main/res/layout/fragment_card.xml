<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.foodmenu.CardFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="35dp">

        <ImageView
            android:id="@+id/window_go_back"
            android:layout_width="31dp"
            android:layout_height="38dp"
            android:layout_marginTop="7dp"
            android:background="@null"
            android:src="@drawable/ic_chevron_left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/window_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/nunito"
            android:text="More"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/window_image"
            android:layout_width="108dp"
            android:layout_height="87dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/window_go_back"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/window_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="window_title"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@+id/window_image"
            app:layout_constraintTop_toBottomOf="@+id/window_more" />

        <TextView
            android:id="@+id/window_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="TextView"
            android:textColor="#FA4A0C"
            app:layout_constraintStart_toEndOf="@+id/window_image"
            app:layout_constraintTop_toBottomOf="@+id/window_title" />

        <Button
            android:id="@+id/window_minus"
            android:layout_width="48dp"
            android:layout_height="54dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="#C4C4C4"
            android:text="-"
            android:textColor="#000000"
            android:textSize="24sp"
            app:cornerRadius="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/window_image" />

        <Button
            android:id="@+id/window_plus"
            android:layout_width="48dp"
            android:layout_height="54dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="#C4C4C4"
            android:text="+"
            android:textColor="#000000"
            android:textSize="24sp"
            app:cornerRadius="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/window_image" />

        <TextView
            android:id="@+id/window_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="16dp"
            android:text="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/window_plus"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/window_minus" />

        <Button
            android:id="@+id/window_add_to_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:drawableEnd="@drawable/ic_shopping_cart"
            android:text="Add to cart"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>